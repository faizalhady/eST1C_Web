@page "/masterdata"
@inject MasterDataService MasterDataService

<h3>Master Data Table</h3>

@if (masterDataList == null)
{
    <p>Loading...</p>
}
else if (!masterDataList.Any())
{
    <p>No data available.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Quantity</th>
                <th>Brand</th>
                <th>Item Description</th>
                <th>Model</th>
                <th>Driver Serial No</th>
                <th>Specification</th>
                <th>Controller Serial No</th>
                <th>Supplier</th>
                <th>Jabil ID No</th>
                <th>NRE/Jabil Own</th>
                <th>Plant</th>
                <th>IE/ME</th>
                <th>Workcell</th>
                <th>PIC</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in masterDataList)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Date</td>
                    <td>@item.Quantity</td>
                    <td>@item.Brand</td>
                    <td>@item.ItemDescription</td>
                    <td>@item.Model</td>
                    <td>@item.DriverSerialNo</td>
                    <td>@item.Specification</td>
                    <td>@item.ControllerSerialNo</td>
                    <td>@item.Supplier</td>
                    <td>@item.JabilIDNo</td>
                    <td>@item.NREorJabilOwn</td>
                    <td>@item.Plant</td>
                    <td>@item.IEME</td>
                    <td>@item.Workcell</td>
                    <td>@item.PIC</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<MasterData>? masterDataList;

    protected override async Task OnInitializedAsync()
    {
        masterDataList = await MasterDataService.GetAllMasterDataAsync();
    }
}
